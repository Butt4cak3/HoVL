{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],

    "sourceMap": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "isolatedModules": true,

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "hovl/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"]
}
